#!/usr/bin/env bash

search_github() {
    curl -s "https://api.github.com/search/repositories?q=$1&sort=stars&order=desc" | jq -r '.items[0].html_url'
}

query=$(rofi -dmenu -p "GitHub Search:")
[ -z "$query" ] && exit 1

url=$(search_github "$query")
[ -z "$url" ] && { rofi -e "No results found."; exit 1; }

xdg-open "$url"
